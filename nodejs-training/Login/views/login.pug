html
  head
    meta(charset='UTF-8')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stypes/login.css')
  body
  .container
    .form
      .title
        h1 
          span.login100-form-title.p-b-70 Welcome
        span
          img(src='/image/avatar.jpg').rounded-circle
      if errors
        each error in errors
          .alert.alert-danger #{errors}
      form(action='/login' method='POST')
        .form-group
          label(for='exampleInputEmail1') Email address
          input#email.form-control(type='email', aria-describedby='emailHelp' name='email')
        .form-group
          label(for='exampleInputPassword1') Password
          input#password.form-control(type='password' name='password')
        .form-group.form-check
          input#exampleCheck1.form-check-input(type='checkbox')
          label.form-check-label(for='exampleCheck1') Check me out
        button.btn.btn-primary(type='submit') login